gwtu() {
  if [[ -z $1 ]]; then
    echo "Usage: $0 [branch name]"
    echo "Creates a new git worktree in a sibling directory to this project's root."
    echo "Cleanup up the generate worktree with [gwtd]"
    return 1;
  fi

  local toplevel="$(git rev-parse --show-toplevel)"
  local branch="$1"
  local base="$(basename $toplevel)"
  local worktree_path="../${base}--${branch}"
  cd $path
}